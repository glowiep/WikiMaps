<div class="sidebar-pane" id="map-tab">
  <h1 class="sidebar-header"
    >Map Tab<span class="sidebar-close"><i class="fa fa-caret-left"></i></span
  ></h1>

  <div id="marker-list">
    <br>
    <label class="label" for="title">TITLE</label>
    <input class="form-control" type="text" placeholder="Title" id="title" name="title">
      
    <label class="label" for="map-description">DESCRIPTION</label>
    <div class="form-floating">
      <textarea id="map-description" class="form-control" placeholder="Description"></textarea>
    </div>
    
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="private">
      <label class="form-check-label" for="private">
        Private
      </label>
    </div>
    <ul></ul>
  </div>

  <div id="markerModal" class="modal">
    <div class="modal-content">
      <h3>Information about the point</h3>
      <label for="description">Description:</label>
      <input type="text" id="description" name="description" /><br /><br />
      <label for="image">Image (URL):</label>
      <input type="text" id="image" name="image" /><br /><br />
      <button onclick="addMarker()">Add point</button>
    </div>
  </div>
  <button type="submit" class="btn btn-success">Save</button>
</div>
