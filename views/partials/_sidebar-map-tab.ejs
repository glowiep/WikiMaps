<div class="sidebar-pane" id="map-tab">
  <h5 class="sidebar-header"
    >New Map<span class="sidebar-close"><i class="fa fa-caret-left"></i></span
  ></h5>
  <br>
  <h5>Create New Map <i class="fa-solid fa-map"></i></h5>
<form id="mapForm">
  <div id="marker-list">
    <br />
    <label class="label" for="title">TITLE</label>
    <input
      class="form-control"
      type="text"
      placeholder="Title"
      id="title"
      name="title"
    />

    <label class="label" for="map-description">DESCRIPTION</label>
    <div class="form-floating">
      <textarea
        id="map-description"
        class="form-control"
        placeholder="Description"
      ></textarea>
    </div>

    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="private" />
      <label class="form-check-label" for="private"> Private </label>
    </div>
    <br>
    <ul></ul>
  </div>
  <button type="submit" class="btn btn-success" id="save-button">Save</button>
</div>

</form>
