<div class="sidebar-pane" id="profile">
  <h1 class="sidebar-header"
    >Profile<span class="sidebar-close"><i class="fa fa-caret-left"></i></span
  ></h1>

  <!-- When user is not logged in -->
  <% if (username === undefined) { %>
  <form action="/users/signup" method="GET">
    <h4>New to WikiMaps?</h4>
    <p #="sign-up-prompt"
      >Sign up to create a profile so that you can create maps, keep track of
      your favourite maps, and contribute to public maps!</p
    >
    <button type="submit" class="btn btn-primary">Sign Up</button>
  </form>

  <form action="/users/login" method="GET">
    <h4>Existing User?</h4>
    <p>Welcome Back!</p>
    <button type="submit" class="btn btn-primary">Log In</button>
  </form>
  <% } else { %>
  <!-- For logged in users: -->
  <br>
  <h5>My Maps <i class="fa-solid fa-map"></i></h5>
  <div id="my-maps-list">
    <div class="card">
      <a class="map-list-item" href="#"><b> map.title </b></a>
    </div>
  </div>
  
  <h5>Favourites <i class="fa-solid fa-heart"></i></h5>
  <div id="my-fav-list"></div>
  <p>Favourties list</p>

  <h5>Contributions <i class="fa-solid fa-comment"></i></h5>
  <div id="my-contrib-list"></div>
  <% } %>
</div>
